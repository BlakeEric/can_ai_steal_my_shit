---
const TITLE_SEPERATOR = "|";
const SITE_TITLE = "CanAIStealMyShit";
const SITE_AUTHOR = "Blake Lundquist";
const DESCRIPTION =
  "Don't let AI bots steal your website content! Use our free tool to analyse your website. We determine which AI robots can crawl your content and generate code to disallow them from accessing your website.";

const { articleDate, description = DESCRIPTION, ogImage, title } = Astro.props;

const siteTitle = `${title} ${TITLE_SEPERATOR} ${SITE_TITLE}`;

const canonicalURL = new URL(Astro.url.pathname, Astro.site?.origin);

const socialImageURL = new URL(
  ogImage ? ogImage : "/social-card.png",
  Astro.url
).href;
---

<meta charset="utf-8" />
<meta
  content="width=device-width, initial-scale=1.0, shrink-to-fit=no"
  name="viewport"
/>
<meta content="IE=edge" http-equiv="X-UA-Compatible" />
<title>{siteTitle}</title>

{/* Icons / Favicon */}
<link href="/favicon.ico" rel="icon" sizes="any" />
<!-- <link href="/manifest.webmanifest" rel="manifest" /> -->
<link href={canonicalURL} rel="canonical" />

{/* Primary Meta Tags */}
<meta content={siteTitle} name="title" />
<meta content={description} name="description" />
<meta content={SITE_AUTHOR} name="author" />

{/* Theme Colour */}
<meta content="" name="theme-color" />

{/* Open Graph / Facebook */}
<meta content={articleDate ? "article" : "website"} property="og:type" />
<meta content={title} property="og:title" />
<meta content={description} property="og:description" />
<meta content={canonicalURL} property="og:url" />
<meta content={SITE_TITLE} property="og:site_name" />
<meta content="en" property="og:locale" />
<meta content={socialImageURL} property="og:image" />
<meta content="1200" property="og:image:width" />
<meta content="630" property="og:image:height" />

{/* Twitter */}
<meta content="summary_large_image" property="twitter:card" />
<meta content={canonicalURL} property="twitter:url" />
<meta content={title} property="twitter:title" />
<meta content={description} property="twitter:description" />
<meta content={socialImageURL} property="twitter:image" />

{/* Sitemap */}
<link href="/sitemap-index.xml" rel="sitemap" />

<meta content={Astro.generator} name="generator" />
<link rel="stylesheet" href="https://cdn.simplecss.org/simple.min.css" />
